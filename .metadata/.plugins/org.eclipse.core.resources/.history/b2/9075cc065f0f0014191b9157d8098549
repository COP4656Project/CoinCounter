package com.android.groupproject;
import android.hardware.Camera;
import org.opencv.imgproc.Imgproc;
import org.opencv.core.CvType;
import org.opencv.core.Mat;
import org.opencv.highgui.Highgui;
import org.opencv.android.Utils;
import org.opencv.core.Core;
import org.opencv.android.OpenCVLoader;
import android.widget.TextView;

public class ImageProcess {
	public numberOfCircles = 0;
	public Camera.PictureCallback Process = new Camera.PictureCallback() {

		@Override
		public void onPictureTaken(byte[] data, Camera arg1) {
			
			Mat image = new Mat(400, 400, CvType.CV_8UC3);
			image.put(0, 0, data);
			
			if (!OpenCVLoader.initDebug()) {
		        // Handle initialization error
				
		    }
			
			Imgproc.cvtColor(image, image, Imgproc.COLOR_RGBA2GRAY);
			
			Mat circles = new Mat();
			Imgproc.HoughCircles(image, circles, Imgproc.CV_HOUGH_GRADIENT, 1d, 600d);
			
			if (circles != null)
			{
				int value = circles.cols();
			

			}
		}
		
	};

}
